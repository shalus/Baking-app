<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/recipe_detail_layout_padding"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/ingredient_label"
        android:id="@+id/tv_label_ingredients"
        android:textSize="@dimen/labels_text_size"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ingredient"
        android:layout_marginTop="@dimen/margin_top_ingredients"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/steps_label"
        android:id="@+id/tv_label_steps"
        android:layout_marginTop="@dimen/margin_top_steps"
        android:textSize="@dimen/labels_text_size"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_view"
        android:listSelector="@drawable/list_selector"/>

</LinearLayout>
